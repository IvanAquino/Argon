<?xml version="1.0" encoding="UTF-8"?>
<view>
    <columns>
        <group name="theme" title="argon-theme" numcolumns="12" icon="ni ni-settings">
            <column name="name" display="none" order="0">
                <widget type="text" fieldname="name" readonly="true" required="true" />
            </column>
            <column name="theme" numcolumns="3" order="100">
                <widget type="select" fieldname="theme">
                    <values title="Default">default</values>
                    <values title="Primary">primary</values>
                    <values title="Success">success</values>
                    <values title="Danger">danger</values>
                    <values title="Warning">warning</values>
                    <values title="Info">info</values>
                </widget>
            </column>
        </group>
    </columns>
</view>
